<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title|default('Notification Propon') }}</title>
  </head>
  <body style="margin:0;padding:0;background-color:#f4f7fb;font-family:Arial, Helvetica, sans-serif;color:#1f2937;">
    <div style="display:none;max-height:0;overflow:hidden;opacity:0;color:transparent;">
      {{ preheader|default('Vous avez une nouvelle notification.') }}
    </div>
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color:#f4f7fb;padding:24px 12px;">
      <tr>
        <td align="center">
          <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="max-width:600px;background-color:#ffffff;border-radius:14px;border:1px solid #e5e7eb;">
            <tr>
              <td style="padding:28px 28px 18px 28px;">
                <div style="font-size:18px;font-weight:700;color:#0f172a;">
                  {{ title|default('Notification Propon') }}
                </div>
                <div style="margin-top:10px;font-size:14px;color:#475569;">
                  Bonjour {{ recipientName|default('') }},
                </div>
                <div style="margin-top:18px;font-size:15px;line-height:1.5;color:#1f2937;">
                  {% for line in messageLines|default([]) %}
                    <p style="margin:0 0 12px 0;">{{ line }}</p>
                  {% endfor %}
                </div>
                {% if ctaUrl %}
                  <div style="margin-top:18px;">
                    <a href="{{ ctaUrl }}" style="display:inline-block;background-color:#0f766e;color:#ffffff;text-decoration:none;padding:10px 18px;border-radius:8px;font-weight:600;">
                      {{ ctaLabel|default('Voir') }}
                    </a>
                  </div>
                {% endif %}
                {% if footer %}
                  <div style="margin-top:24px;font-size:12px;color:#94a3b8;">
                    {{ footer }}
                  </div>
                {% endif %}
              </td>
            </tr>
          </table>
          <div style="margin-top:14px;font-size:11px;color:#94a3b8;">
            Propon â€¢ Notification automatique
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>
