{% extends 'emails/base.html.twig' %}
{% set emailTitle = title|default('Notification Propon') %}
{% set cardPadding = '28px 28px 18px 28px' %}
{% set greetingName = recipientName|default('') %}

{% block title %}{{ emailTitle }}{% endblock %}
{% block preheader %}{{ preheader|default('Vous avez une nouvelle notification.') }}{% endblock %}

{% block content %}
  <div style="font-size:18px;font-weight:700;color:#0f172a;">
    {{ emailTitle }}
  </div>
  <div style="margin-top:10px;font-size:14px;color:#475569;">
    Bonjour{% if greetingName %} {{ greetingName }}{% endif %},
  </div>
  <div style="margin-top:18px;font-size:15px;line-height:1.5;color:#1f2937;">
    {% for line in messageLines|default([]) %}
      <p style="margin:0 0 12px 0;">{{ line }}</p>
    {% endfor %}
  </div>
  {% if ctaUrl is defined and ctaUrl %}
    <div style="margin-top:18px;">
      <a href="{{ ctaUrl }}" style="display:inline-block;background-color:#0f766e;color:#ffffff;text-decoration:none;padding:10px 18px;border-radius:8px;font-weight:600;">
        {{ ctaLabel|default('Voir') }}
      </a>
    </div>
  {% endif %}
  {% if footer is defined and footer %}
    <div style="margin-top:24px;font-size:12px;color:#94a3b8;">
      {{ footer }}
    </div>
  {% endif %}
{% endblock %}

{% block footer_note %}Propon &bull; Notification automatique{% endblock %}
