{% embed "utilities/jumbotron_skeleton.html.twig" %}

    {% block image %}
   
        <img src="{{asset ('misc/homepage_hands_volunteers.png', 'larger')}}" class="jumbotron-img d-block mx-lg-auto img-fluid" style="border-radius:0.65rem;" alt="Raised hands from people who Want to volunteer" width="500" loading="lazy">

    {% endblock %}

    {% block text %}

        <h1 class="jumbotron-title display-5 lh-1 mb-lg-4 text-center">Ici on présente les projets</h1>

        <p class="jbtr-descr text-center text-md-start lead"><strong><span class="display-md-none"> </span>Présentez gratuitement votre projet et rendez-le <b><span class="jbtr-highlight">PLUS VISIBLE</span></b> grâce à notre outil <b class="jbtr-accent">simple</b> et <b class="jbtr-accent">rapide</b>. Donnez des nouvelles et recevez des nouvelles d'autres projets.</strong></p>

        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center pt-3">

            {# Access Propon Manifesto Button #}

            <a class="" href="{{ path('static_page', {'slug': 'short_manifesto'}) }}">

                <button class="jbtr-cta-btn fw-bold btn d-flex justify-content-center align-items-center pt-2 pe-4 me-md-4 mb-3 mb-md-0" data-track-click='{"key":"read-the-pop-manifesto"}'>

                <img class="m" src="{{ asset('reading_book.png', 'misc')}}" width="32" alt="a opened book with hands handling it">
                <span class="ps-1">Lire notre Manifeste</span>
            
                </button>
        
            </a>


            {# Access Present a Project Button #}

            <a href="{{path('create_project_presentation')}}">

                <button class="jbtr-cta-btn jbtr-cta-btn-present-project btn d-flex justify-content-center align-items-center px-3 pt-2" data-track-click='{"key":"clicked-jumbotron-create-presentation"}'>
        
                  <img class="pp-theme-icon" src="{{ asset('add_presentation.svg', 'misc')}}" alt="bucket with a plus icon">
                  
                  <span class="fw-bold ps-2">Présenter son projet maintenant</span>
              
                </button>
        
            </a>

        </div>

    {% endblock %}

{% endembed %}
