{% extends 'base.html.twig' %}

{% block headTag %}<meta name="robots" content="noindex,nofollow" />{% endblock %}

{% block title %}Mot de passe oublié{% endblock %}
 
{% block body %}

    <div class="page-container container d-flex justify-content-center text-center my-5">

        <div class="col-md-6">
            
            <h2 class="mb-5">Mot de passe oublié</h2>
                
            <div class="row mb-5">

                <div class="">
                                                    
                    {{ form_start(form) }}
            
                    <div class="mb-5">

                        {{ form_label(form.email) }}

                        <span class="mr-2"></span>

                        {{ form_widget(form.email) }}
                        

                    </div>


                    <a href="{{ path('homepage') }}">
                        <button type="button" class="btn btn-lg btn-go-back me-3">❌ Annuler</button>
                    </a>
                    
                    <button type="submit" class="btn btn-lg btn-validate fw-bold">
                        
                        ✔️ Valider

                    </button>

                    {{ form_end(form) }}

                
                </div>

            </div>
        
        </div>


    </div>


{% endblock %}