{% extends 'base.html.twig' %}

{% block headTag %}<meta name="robots" content="noindex,nofollow" />{% endblock %}

{% block title %}Créer un nouveau mot de passe{% endblock %}
 
{% block body %}

    <div class="container my-5">

        <h3>Nouveau mot de passe</h3>
                    
        <div class="row mb-5">

            <div class="col-md-7">
                                                
                {{ form_start(form) }}
           
                <div class="mb-4">

                    <br>

                    {{ form_errors(form.newPassword) }}
                    {{ form_widget(form.newPassword) }}

                    <br><br>
                    

                </div>


                <div class="mb-5">

                
                    <a href="{{ path('homepage') }}">

                        <button type="button" class="btn btn-lg btn-go-back me-3">❌ Annuler</button>

                    </a>
                    
                    <button type="submit" class="btn btn-validate fw-bold">
                        
                        ✔️ Valider le nouveau mot de passe

                    </button>
                
                
                </div>



                {{ form_end(form) }}

            
            </div>

        </div>

    </div>


{% endblock %}