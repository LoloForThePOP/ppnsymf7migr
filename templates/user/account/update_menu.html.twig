{% extends 'base.html.twig' %}

{% block headTag %}<meta name="robots" content="noindex,nofollow" />{% endblock %}

{% block title %}Modification du Compte Utilisateur{% endblock %}

{% block body %}

    <div class="container col-md-10 col-lg-7 px-3 px-md-4 my-4 my-md-5">

        <h3 class="fw-bold mb-4 mb-md-5 text-center text-md-start">Modifier votre compte utilisateur</h3>

        <div class="d-grid gap-3 d-md-flex flex-md-wrap mb-4 justify-content-md-start">
            <!-- access update account email -->
            <a href="{{ path ('update_account_email') }}" class="btn btn-primary fw-bold">Modifier l'e-mail de mon compte</a>

            <!-- access change password -->
            <a href="{{ path ('update_account_password') }}" class="btn btn-primary fw-bold">Modifier mon mot de passe</a>
        </div>

        <!-- Other possibilities -->
        <div class="text-center text-md-start">
            <!-- Access other possibilities trigger collapsible -->
            <a class="btn btn-light" onclick="this.remove();" data-bs-toggle="collapse" href="#collapseOtherPossibilities" role="button" aria-expanded="false">Autres possibilit√©s</a>

            <!-- Collapsible Other Possibilities Container -->
            <div class="collapse mt-3" id="collapseOtherPossibilities">
                <!-- access delete user account page -->
                <a href="{#{path ("delete_account")}#}" class="btn btn-danger fw-bold">Suppression du compte utilisateur</a>
            </div>
        </div>

    </div>
    
{% endblock %}
