{% extends 'base.html.twig' %}

{% block headTag %}<meta name="robots" content="noindex,nofollow" />{% endblock %}

{% block title %}Mot de passe oublié{% endblock %}
 
{% block body %}

    <div class="page-container account-page container col-md-10 col-lg-6 px-3 px-md-4 my-4 my-md-5">
        <h3 class="account-page__title mb-4 mb-md-5 text-center text-md-start">Mot de passe oublié</h3>

        {{ form_start(form) }}

        <div class="mb-4">
            <div class="mb-2 fw-bold text-start">{{ form_label(form.email) }}</div>
            {{ form_widget(form.email) }}
            <div class="mt-2 fw-bold">{{ form_errors(form.email) }}</div>
        </div>

        <div class="account-page__actions mt-4 d-flex justify-content-center justify-content-md-start align-items-center flex-wrap gap-3">
            <a href="{{ path('homepage') }}" class="btn btn-go-back">Annuler</a>
            <button type="submit" class="btn btn-validate">Valider</button>
        </div>

        {{ form_end(form) }}
    </div>


{% endblock %}
