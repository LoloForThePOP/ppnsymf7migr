{% extends 'base.html.twig' %}

{% block headTag %}<meta name="robots" content="noindex,nofollow" />{% endblock %}

{% block title %}Modification adresse e-mail du compte{% endblock %}

{% block body %}

    <div class="page-container account-page container col-md-10 col-lg-7 px-3 px-md-4 my-4 my-md-5">

        <h3 class="account-page__title fw-bold mb-4 mb-md-5 text-center text-md-start">Modification de l'adresse e-mail associée à mon compte</h3>

        {{ form_start(form) }}

        <div class="my-3 fs-15 fw-bold">
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-4">
            <h5 class="mb-3 fw-bold text-start account-page__helper">
                Veuillez écrire ici la nouvelle adresse e-mail que vous souhaitez associer à votre compte utilisateur
            </h5>

            <div class="mb-4">
                {{ form_widget(form.email) }}
            </div>

            <div class="d-none mb-4">
                {{ form_rest(form) }}
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="account-page__actions mt-4 d-flex justify-content-center justify-content-md-start align-items-center flex-wrap gap-3">
            <a href="{{ path('user_profile_show', {'usernameSlug': app.user.usernameSlug}) }}" class="btn btn-go-back">Annuler</a>
            <button type="submit" class="btn btn-validate">Enregistrer</button>
        </div>

        {{ form_end(form) }}

    </div>
    
{% endblock %}
