{% extends 'base.html.twig' %}

{% block title %}Page Utilisateur{% endblock %}

{% block stylesheets %}

  <link href="/css/project_card.css" rel="stylesheet">
  <link href="/css/titled_project_collection.css" rel="stylesheet">
  <link href="/css/show_more_less_button.css" rel="stylesheet">

{% endblock %}

{% block body %}


<div class="container col-md-11 col-lg-8 my-5 p-0 pt-md-4 pb-3">

    <!-- User Name and Image Area -->

    <div class="row d-flex justify-content-center mb-4">

        {# user image #}

        <div class="col-auto d-flex align-items-center justify-content-center">

            <!-- user personalized image -->

            {% if user.profile.image is not empty %}

            <img class="rounded-1 profile-avatar-image" src="{{ vich_uploader_asset(user.profile)  | imagine_filter('persorg_thumbnail_sm') }}" alt="Avatar de {{ user.username }}">

            <!-- else default one letter image -->

            {% else %}
                                    
                <div class="avatar-circle avatar-100">

                    <span class="avatar-initial avatar-initial-100">

                        {{user.username | slice (0,1) | capitalize }}

                    </span>

                </div>

            {% endif %}

        </div>

        {# user name #}

        <div class="col-auto ps-0 ps-md-3 d-flex align-items-center">

            <h3 class="mb-0 fw-bold">{{ user.username }}</h3>

        </div>

    </div>

    <!-- End of User Name and Image Area -->



    <!-- Actions Possibilities -->

    <div class="row text-center mb-5">

        {% if user is same as(app.user) %}
            
            <div class="mt-0 mt-md-3 d-grid gap-3 gap-md-2 d-md-flex justify-content-md-center">
                <a href="{{ path ('public_profile_edit')}} " class="btn btn-light">Mes informations publiques</a>
                <a href="{{ path ('update_account_menu') }}" class="btn btn-light">Mon compte utilisateur</a>
                <a href="{{ path('user_bookmarks_index') }}" class="btn btn-light">Mes marque-pages</a>
            </div>

        {% endif %}

    </div>

    <!--End of Actions Possibilities -->

   <!-- User Description --> 

    <div class="row d-flex justify-content-center m-0 mb-5">
        
        <div class="user-persorg-description col-md-11 col-lg-8 p-3 rounded theme-panel">
                        
            {% if not user.profile.description %}

                <div class="text-center">
                    
                    <span class="h5"> 
                        Aucune description de profil n'a été renseignée ¯\_(ツ)_/¯
                    </span>   

                    {% if user is same as app.user %}

                        <div class="fs-5"> 

                            Vous pouvez remplir une description 
                            
                            <a href="{{ path ('public_profile_edit')}}" class=""> <span class="badge profile-edit-badge">ici</span></a>

                        </div>

                    {% endif %}

                </div>


            {% else %}
            
                {{ user.profile.description | nl2br }}

            {% endif %}
                
        </div>

    </div>

    <!-- end of User Description --> 


    <!-- User Websites --> 

    {% if user.profile.website1 is not empty or user.profile.website2 is not empty %}

        <div class="row text-center mb-4">

            <h4 class="fw-bold mb-4">Sites web ou réseaux sociaux</h4>

            <div class="ms-md-4">

                {% if user.profile.website1 is not empty %}

                    <a class="user-persorg-website" href="{{user.profile.website1}}" target="_blank" rel="noopener noreferrer">{{user.profile.website1}}</a>

                {% endif %}

                {% if user.profile.website2 is not empty %}

                    <a class="user-persorg-website" href="{{user.profile.website2}}" target="_blank" rel="noopener noreferrer">{{user.profile.website2}}</a>

                {% endif %}

                {% if user.profile.website3 is not empty %}

                    <a class="user-persorg-website" href="{{user.profile.website3}}" target="_blank" rel="noopener noreferrer">{{user.profile.website3}}</a>

                {% endif %}

                {#
                

                {% if user.profile.website4 is not empty %}

                    <a class="user-persorg-website" href="{{user.profile.website4}}" target="_blank">{{user.profile.website4}}</a>

                {% endif %}
                
                
                #}

            </div>

        </div>
    
    {% endif %}

    <!-- end of User Websites -->



    <!-- User Created Project Presentations -->
    
    <div class="mb-5">
        
        {% if presentations | default([]) | length > 0 %}

            {% set userPresentations = presentations %}

            {% set userPresentationsLabel %}

                {% if userPresentations | length == 1 %}

                    1 présentation créée

                {% else %}

                    {{userPresentations | length}} présentations créées

                {% endif %}

            {% endset %}

            
            {% import "project_presentation/cards/list.html.twig" as displayUserPresenterProjects %}

            {% block javascripts %}<script src="/js/show_more_less_button.js"></script>{% endblock %}

            {{ displayUserPresenterProjects.collection(
                userPresentationsLabel,
                userPresentations | reverse,
                'tab-result',
                'hide-335',
                '',
                presentationStats | default({})
            ) }}
            
        {% endif %}

    </div>

    <!-- End of User Created Project Presentations -->


    


    

</div>



{% endblock %}
