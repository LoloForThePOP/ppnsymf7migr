{% set ingestion = presentation.ingestion ?? null %}
{% set sourceUrl = ingestion ? ingestion.sourceUrl : null %}
{% set ingestedAt = ingestion ? ingestion.ingestedAt : null %}
{% set safeSourceUrl = sourceUrl|safe_href %}

{% if sourceUrl or ingestedAt %}
    <div class="pp-automation-notice mt-4">
        <div class="pp-automation-header">
            <span class="pp-automation-title">Présentation automatisée — veuillez vérifier les informations importantes.</span>
            <details class="pp-automation-details">
                <summary class="pp-automation-toggle">
                    <span class="toggle-closed">Afficher +</span>
                    <span class="toggle-open">Afficher −</span>
                </summary>
                <div class="pp-automation-body">
                    {% if sourceUrl %}
                        Source :
                        {% if safeSourceUrl %}
                            <a href="{{ safeSourceUrl }}" target="_blank" rel="noopener">{{ sourceUrl|truncate(60) }}</a>
                        {% else %}
                            {{ sourceUrl|truncate(60) }}
                        {% endif %}
                    {% endif %}
                    {% if sourceUrl and ingestedAt %} - {% endif %}
                    {% if ingestedAt %}
                        Importé le {{ ingestedAt|date('d/m/Y') }}
                    {% endif %}
                </div>
            </details>
        </div>
    </div>

    <style>
        .pp-automation-notice{
            display: inline-block;
            border: 1px solid var(--theme-border);
            background-color: var(--theme-surface);
            color: var(--theme-text);
            border-radius: 8px;
            padding: 12px 14px;
            max-width: 100%;
        }

        .pp-automation-header{
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 6px;
        }

        .pp-automation-title{
            font-size: 0.95rem;
            color: var(--theme-text-muted);
        }

        .pp-automation-details{
            margin: 0;
            width: auto;
        }

        .pp-automation-toggle{
            list-style: none;
            cursor: pointer;
            font-size: 0.9rem;
            color: color-mix(in srgb, var(--theme-accent) 70%, var(--theme-text-muted));
        }

        .pp-automation-toggle::-webkit-details-marker{
            display: none;
        }

        .pp-automation-details[open] .toggle-closed{
            display: none;
        }

        .pp-automation-details:not([open]) .toggle-open{
            display: none;
        }

        .pp-automation-body{
            margin-top: 8px;
            font-size: 0.9rem;
            color: var(--theme-text-muted);
            word-break: break-word;
        }

        .pp-automation-body a{
            color: color-mix(in srgb, var(--theme-accent) 70%, var(--theme-text-muted));
        }
    </style>
{% endif %}
