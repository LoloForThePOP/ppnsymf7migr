{% set ingestion = presentation.ingestion ?? null %}
{% set sourceUrl = ingestion ? ingestion.sourceUrl : null %}
{% set ingestedAt = ingestion ? ingestion.ingestedAt : null %}
{% set sourceCreatedAt = ingestion ? ingestion.sourceCreatedAt : null %}
{% set sourceUpdatedAt = ingestion ? ingestion.sourceUpdatedAt : null %}
{% set safeSourceUrl = sourceUrl|safe_href %}

{% if sourceUrl or ingestedAt or sourceCreatedAt or sourceUpdatedAt %}
    <div class="pp-automation-notice mt-4">
        <div class="pp-automation-header">
            <div class="pp-automation-top">
                <span class="pp-automation-title">Présentation automatisée — veuillez vérifier les informations importantes.</span>
                {% if is_granted('ROLE_ADMIN') and sourceUrl %}
                    <a class="pp-automation-enrich" href="{{ path('project_fetch_images', {'stringId': presentation.stringId}) }}">
                        Enrichir images
                    </a>
                {% endif %}
            </div>
            <details class="pp-automation-details">
                <summary class="pp-automation-toggle">
                    <span class="toggle-closed">Afficher +</span>
                    <span class="toggle-open">Afficher −</span>
                </summary>
                <div class="pp-automation-body">
                    {% if sourceUrl %}
                        <div>
                            URL source :
                            {% if safeSourceUrl %}
                                <a href="{{ safeSourceUrl }}" target="_blank" rel="noopener">{{ sourceUrl|truncate(60) }}</a>
                            {% else %}
                                {{ sourceUrl|truncate(60) }}
                            {% endif %}
                        </div>
                    {% endif %}
                    {% if sourceCreatedAt or sourceUpdatedAt %}
                        <div>
                            Données source :
                            {% if sourceCreatedAt %}
                                créé le {{ sourceCreatedAt|date('d/m/Y') }}
                            {% endif %}
                            {% if sourceUpdatedAt %}
                                {% if sourceCreatedAt %} · {% endif %}
                                mis à jour le {{ sourceUpdatedAt|date('d/m/Y') }}
                            {% endif %}
                        </div>
                    {% endif %}
                    {% if ingestedAt %}
                        <div>Importé le {{ ingestedAt|date('d/m/Y') }}</div>
                    {% endif %}
                </div>
            </details>
        </div>
    </div>

    <style>
        .pp-automation-notice{
            display: inline-block;
            border: 1px solid var(--theme-border);
            background-color: var(--theme-surface);
            color: var(--theme-text);
            border-radius: 8px;
            padding: 12px 14px;
            max-width: 100%;
        }

        .pp-automation-header{
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 6px;
        }

        .pp-automation-top{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 8px;
        }

        .pp-automation-title{
            font-size: 0.95rem;
            color: var(--theme-text-muted);
        }

        .pp-automation-enrich{
            display: inline-flex;
            align-items: center;
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid var(--theme-border);
            font-size: 0.85rem;
            color: color-mix(in srgb, var(--theme-accent) 70%, var(--theme-text));
            background: var(--theme-surface);
            text-decoration: none;
        }

        .pp-automation-enrich:hover{
            text-decoration: underline;
        }

        .pp-automation-details{
            margin: 0;
            width: auto;
        }

        .pp-automation-toggle{
            list-style: none;
            cursor: pointer;
            font-size: 0.9rem;
            color: color-mix(in srgb, var(--theme-accent) 70%, var(--theme-text-muted));
        }

        .pp-automation-toggle::-webkit-details-marker{
            display: none;
        }

        .pp-automation-details[open] .toggle-closed{
            display: none;
        }

        .pp-automation-details:not([open]) .toggle-open{
            display: none;
        }

        .pp-automation-body{
            margin-top: 8px;
            font-size: 0.9rem;
            color: var(--theme-text-muted);
            word-break: break-word;
        }

        .pp-automation-body a{
            color: color-mix(in srgb, var(--theme-accent) 70%, var(--theme-text-muted));
        }
    </style>
{% endif %}
