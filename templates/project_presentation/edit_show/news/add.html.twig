<div class="news-form-container">

    {{ form_start(addNewsForm) }}

        <div class="textarea-container">

            {{form_widget(addNewsForm.textContent)}}
        
        </div>

        {# File uploads #}

        <div class="not-textarea-container">
            
            <div class="images-icons-captions-container">

                <div class="chunk">
                
                    <img class="upload-image-icon-news" data-image-position="1" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon">

                    <span class="add-image-label" data-image-position="1">Ajouter une image ...</span>
                    
                    <div class="caption-input-container" data-caption-position="1">{{form_widget(addNewsForm.captionImage1)}}</div>
                    
                </div>

                <div class="chunk">
                
                    <img class="upload-image-icon-news" data-image-position="2" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon">

                    <span class="add-image-label" data-image-position="2">Ajouter une image ...</span>
                    
                    <div class="caption-input-container" data-caption-position="2">{{form_widget(addNewsForm.captionImage2)}}</div>
                    
                </div>

                <div class="chunk">
                
                    <img class="upload-image-icon-news" data-image-position="3" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon">

                    <span class="add-image-label" data-image-position="3">Ajouter une image ...</span>
                    
                    <div class="caption-input-container" data-caption-position="3">{{form_widget(addNewsForm.captionImage3)}}</div>
                    
                </div>
            
            
            </div>

            <div class="d-none">

                {{form_row(addNewsForm.image1File, {'attr': {'data-position': '1'}})}}
                

                {{form_row(addNewsForm.image2File, {'attr': {'data-position': '2'}})}}
                

                {{form_row(addNewsForm.image3File, {'attr': {'data-position': '3'}})}}
            
            </div>

            <button type="submit" class="btn btn-validate btn-lg btn-no-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16"><path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/></svg></button>
        
        </div>

    {{ form_end(addNewsForm) }}


</div>


<script>


    $(document).ready(function(){

        //Rich textarea editor configuration
        const buildTinyMceContentStyle = function (padding) {
            const rootStyles = getComputedStyle(document.documentElement);
            const themeSurface = rootStyles.getPropertyValue('--theme-surface').trim() || '#ffffff';
            const themeText = rootStyles.getPropertyValue('--theme-text').trim() || '#1f2937';
            const themeFont = rootStyles.getPropertyValue('--theme-font-body').trim() || 'Lato, sans-serif';
            const safePadding = padding || '12px 15px';

            return 'body { background-color: ' + themeSurface + '; color: ' + themeText + '; font-family: ' + themeFont + '; padding: ' + safePadding + '; line-height: 1.5; }';
        };

        tinymce.init({
            selector: 'textarea#news_textContent',
            plugins: 'charmap emoticons lists wordcount',
            toolbar: 'undo redo bold italic underline strikethrough bullist emoticons charmap',
            menubar: '',
            height: "400px",
            language: 'fr_FR',
            content_style: buildTinyMceContentStyle(),

        });

        // Trigger click on file input when user clicks on add an image icon

        $('.upload-image-icon-news, .add-image-label').on('click', function (){

            var imagePosition = $(this).data("image-position");

            $("#news_image"+imagePosition+"File_file").click();

        });


        // Change send button color when textarea changed

        $('.news-form-container textarea').bind('input propertychange', function() {

            var buttonColor;

            if(this.value.length){

                buttonColor = "#ddf5c4";
               
            }

            else{ buttonColor = "#ecf0f1";}

            $(".news-form-container button[type=submit]").css('background-color', buttonColor);

        });

        // Check if (image) file input has a file
        // If so we change image icon appearence & make a caption input appear

        $(".news-form-container input:file").change(function (){

            var position = $(this).data("position");
            $('.upload-image-icon-news[data-image-position='+position+']').attr("src", "{{ asset('image_colored.svg', 'misc')}}");
            $('.add-image-label[data-image-position='+position+']').hide();
            $('.caption-input-container[data-caption-position='+position+']').show();
            $("#news_captionImage"+position).focus();

        });


    });


</script>

