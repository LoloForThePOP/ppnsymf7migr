            padding-bottom: 20px;
            border-top: 0;
            border-left: 0;
            border-right: 0;
            border-radius: 0;
        }
   
        .upper-edition-box-container{

            text-align: center;
            margin-top: 11px;
            margin-bottom: 15px;
            
        }

