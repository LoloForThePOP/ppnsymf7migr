        width: 50%;
    }

    .middle-col-md{
        justify-content: center;
        align-items: center;
        border-left: 1px solid rgb(204, 204, 161);
    }

    .right-col-md{
        display: flex;
        justify-content: space-evenly;
        padding-left: 10px;
        border-left: 1px solid rgb(204, 204, 161);
    }

    .pp-placeholder-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .pp-upper-box {
        margin-bottom: 40px;
    }

    .pp-logo-container{

        position: relative;

        display: flex;
        align-items: center;
