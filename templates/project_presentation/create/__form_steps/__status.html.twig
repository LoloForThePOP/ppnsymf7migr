<style>

    .status-choice-btn {
        border: 2px solid #ddd;
        border-radius: 12px;
        width: 180px;
        cursor: pointer;
        background: white;
        transition: all .2s;
    }

    .status-choice-btn:hover {
        border-color: #bcd6ff;
        background: #f7faff;
    }

    .status-choice-btn.selected {
        border-color: #4a93ff;
        background: #e8f0ff;
    }




</style>



<script>
document.addEventListener('DOMContentLoaded', function () {

    const buttons = document.querySelectorAll('.status-choice-btn');
    const input = document.querySelector('#project_presentation_creation_initialStatus');// hidden field updated when user chooses a status

    buttons.forEach(btn => {

        btn.addEventListener('click', function () {

            //Refreshing ui 
            buttons.forEach(b => b.classList.remove('selected'));
            this.classList.add('selected');

            const value = this.dataset.value;
            input.value = value;
            
        });

    });

});
</script>
