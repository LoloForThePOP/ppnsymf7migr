{% extends 'base.html.twig' %}

{% block title %}Normaliser une page HTML{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="h4 mb-3">Normaliser une page HTML</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <form method="post" action="{{ path('admin_project_normalize_html') }}">
            <div class="mb-3">
                <label for="prompt_extra" class="form-label">Complément de prompt</label>
                <textarea id="prompt_extra" name="prompt_extra" class="form-control" rows="8" placeholder="Optionnel : instructions supplémentaires pour la normalisation">{{ promptExtra }}</textarea>
                <div class="form-text">Ajouté au prompt standard avant l’envoi.</div>
            </div>
            <div class="mb-3">
                <label for="raw_html" class="form-label">Coller le code HTML de la page</label>
                <textarea id="raw_html" name="raw_html" class="form-control" rows="12" placeholder="&lt;html&gt;...">{{ rawHtml }}</textarea>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="1" id="persist" name="persist" {% if persist %}checked{% endif %}>
                <label class="form-check-label" for="persist">
                    Persister immédiatement (slides téléchargées si image_urls)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Normaliser</button>
        </form>

        {% if extracted.text %}
            <div class="mt-4">
                <h2 class="h6">Texte extrait (preview)</h2>
                <pre class="theme-pre p-3 rounded" style="white-space: pre-wrap;">{{ extracted.text }}</pre>
            </div>
        {% endif %}

        {% if extracted.links %}
            <div class="mt-3">
                <h2 class="h6">Liens (preview)</h2>
                <ul>
                    {% for link in extracted.links %}
                        <li><a href="{{ link }}" target="_blank" rel="noopener noreferrer">{{ link }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {% if extracted.images %}
            <div class="mt-3">
                <h2 class="h6">Images (preview)</h2>
                <ul>
                    {% for img in extracted.images %}
                        <li><a href="{{ img }}" target="_blank" rel="noopener noreferrer">{{ img }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {% if result %}
            <div class="mt-4">
                <h2 class="h5">Résultat (JSON)</h2>
                <pre class="theme-pre p-3 rounded" style="white-space: pre-wrap;">{{ result }}</pre>
            </div>
        {% endif %}

        {% if created %}
            <div class="alert alert-success mt-3">
                Projet créé : <a href="{{ path('edit_show_project_presentation', {'stringId': created.stringId}) }}" target="_blank" rel="noopener noreferrer">{{ created.title ?? created.goal }}</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
